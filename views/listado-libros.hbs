<section class="bg-light" id="Listado-Libros-Admin">
    <div class="container text-dark ">
        <div class="text-center mb-2 mt-4">
            <h2 class="section-heading text-uppercase text-warning">Libros</h2>
            <h3 class="section-subheading text-secondary">Aquí podrás modificar o eliminar los libros.</h3>
        </div>
        <div class="row mt-4" id="bookCard">
            
        </div>
    </div>


    <div id="Modal">
        <div class="modal fade" id="modalUpdateBook" tabindex="-1" aria-labelledby="modalUpdateBookLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="modalUpdateBookLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form id="updateBookForm" enctype="multipart/form-data">
                        <div id="modalUpdateBookBody" class="modal-body">
                            <div>
                                <div class="form-group mb-3 ">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" class="form-control" id="nombre" placeholder="Ingresa nuevo nombre">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="descripcion">Descripción</label>
                                    <input type="text" class="form-control" id="descripcion" placeholder="Ingresa nueva descripción">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="CategoriaId">Categoría</label>
                                    <div>
                                        <select id="CategoriaId" name="CategoriaId" class="cargarCategorias form-control" >
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="AutorId">Autor</label>
                                    <div>
                                        <select id="AutorId" name="AutorId" class="cargarAutores form-control">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="imagen">Imagen</label>
                                    <div class="mt-1">
                                        <input type="file" id="imagen" name="imagen" accept="image/*" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button id="modalUpdateBookSaveButton" type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="assets/js/listado-libros.js"></script>
<script src="assets/js/actualizar-libro.js"></script>
<script src="assets/js/eliminar-libro.js"></script>